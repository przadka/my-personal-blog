---
export interface Props {
  href: string;
  className?: string;
  ariaLabel?: string;
  title?: string;
  disabled?: boolean;
  variant?: "primary" | "secondary" | "outline" | "text" | "outline-rounded";
}

const {
  href,
  className,
  ariaLabel,
  title,
  disabled = false,
  variant = "primary",
} = Astro.props;

const variants = {
  primary: "hover:text-[--color-accent]",
  secondary: "hover:text-skin-secondary",
  outline: "section-icon-link px-6",
  "outline-rounded": "section-icon-link",
  text: "hover:underline",
};
---

{
  disabled ? (
    <span
      class={`group flex w-auto w-max items-center justify-center gap-2 transition-all duration-200 ${variants[variant]} ${className}`}
      aria-label={ariaLabel}
      title={title}
      aria-disabled={disabled}
    >
      <slot />
    </span>
  ) : (
    <a
      {href}
      class={`group flex w-auto w-max items-center justify-center gap-2 transition-all duration-200 ${variants[variant]} ${className}`}
      aria-label={ariaLabel}
      title={title}
    >
      <slot />
    </a>
  )
}
