---
export interface Props {
  noPadding?: boolean;
  ariaHidden?: boolean;
  variant?: "default" | "hero";
}

const {
  noPadding = false,
  ariaHidden = true,
  variant = "default",
} = Astro.props;
---

<div
  class={`${variant === "hero" ? "max-w-full" : "max-w-3xl"} mx-auto ${variant === "hero" ? "px-6 sm:px-12" : noPadding ? "px-0" : "px-4"}`}
>
  {
    variant === "hero" ? (
      <hr
        class="h-12 bg-black sm:h-[60px] lg:h-[72px]"
        aria-hidden={ariaHidden}
      />
    ) : (
      <hr class="border-[--color-border]" aria-hidden={ariaHidden} />
    )
  }
</div>
